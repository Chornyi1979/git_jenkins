def gv
pipeline {
    agent any
    tools {
        maven 'maven-3.8'
    }
    stages {

        stage ("init") {
            steps {
                script {
                    gv = load "script.groovy_1"
                }
            }
        }
        stage ("increment version") {
            steps {
                script{
                    gv.incrementVersion()
                }
            }
        }
        stage ("build jar") {
            steps {
                script {
                    gv.buildJar()
                }
            }
        }
        stage ("build image") {
            steps {
                script {
                    gv.buildImage()
                }
            }
        }
	stage ("infrastructure") {
            steps {
                script {
                    gv.runTerraform()
                }
            }
        }	
        stage ("deploy") {
            steps {
                script {
                    gv.deployApp()
                }
            }   
        }
	
        stage ("commit version update") {
            steps {
                script {
                    gv.commitVersionUpdate()
                }
            }   
        }

    }
}
