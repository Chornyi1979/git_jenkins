pipeline {
    agent any
    parameters {
        choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description: '')
        booleanParam(name: 'executeTests', defaultValue: true, description: '')
        }
    
    stages {
        stage ("build") {
            agent {
                docker {
                    image 'chornyi1979/my-jenkins-agent:latest' 
                }
            }
            steps{
                echo "Building..."
            }
        }
        stage ("test"){
            when {
                expression {
                    params.executeTests
                }
            }
            steps{
                echo "Testing..."
            }
        }
        stage ("deploy"){
            steps{
                echo "Deploing..."
                echo "deploing version ${params.VERSION}"
            }
        }
    }
    
}
